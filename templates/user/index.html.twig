{% extends 'base.html.twig' %}

{% block title %}Utilisateurs - Artisana.ma{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user_index.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1><i class="fas fa-users-cog"></i> Gestion des Utilisateurs</h1>
        <p>GÃ©rez les comptes utilisateurs de la plateforme</p>
    </div>

    {% if users is empty %}
        <div class="card empty-users">
            <i class="fas fa-user-slash"></i>
            <h3>Aucun utilisateur</h3>
        </div>
    {% else %}
        <div class="user-table-wrapper">
            <table class="user-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th class="user-actions-cell">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>#{{ user.id }}</td>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td class="user-actions-cell">
                                <a href="/user/{{ user.id }}" class="btn btn-secondary user-btn-view">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>

{% endblock %}
