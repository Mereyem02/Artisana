<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Artisana.ma{% endblock %}</title>
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link rel="icon" type="image/png" href="{{ asset('images/logoArtisana.jpg') }}">

        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        
        {{ encore_entry_link_tags('app') }}
    
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
        {% block stylesheets %}{% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/three@0.162.0/build/three.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/three@0.162.0/examples/js/loaders/FontLoader.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/three@0.162.0/examples/js/geometries/TextGeometry.js"></script>
            
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            
            <script src="{{ asset('js/main.js') }}" defer></script>
            <script src="{{ asset('js/form_errors.js') }}" defer></script>
        {% endblock %}
        {{ encore_entry_script_tags('app') }}
    </head>
    <body>
        <nav class="navbar">
            <div class="container">
               <a href="/" class="logo">
                    <img src="{{ asset('images/logoArtisana.jpg') }}" alt="Artisana Logo" class="logo-img">
                            Artisana.ma
                </a>
                <nav data-controller="cart">
                    <a href="/"><i class="fas fa-home"></i> Accueil</a>
                    <a href="/artisan"><i class="fas fa-users"></i> Artisans</a>
                    <a href="/product"><i class="fas fa-box"></i> Produits</a>
                    <a href="/cooperative"><i class="fas fa-handshake"></i> Coopératives</a>
                    
                    {% if app.user %}
                        <a href="{{ path('app_cart_index') }}" class="cart-link">
                            <i class="fas fa-shopping-cart"></i> Panier
                            <span data-cart-target="badge" class="cart-badge">
                                <span data-cart-target="count">0</span>
                            </span>
                        </a>
                    {% endif %}
                    
                    {% if app.user %}
                        {% if app.user.artisan %}
                            {% if app.user.artisan.approvalStatus == 'PENDING' %}
                                <span class="badge badge-warning nav-badge">
                                    <i class="fas fa-hourglass-half"></i> En attente
                                </span>
                            {% elseif app.user.artisan.approvalStatus == 'REJECTED' %}
                                <span class="badge badge-danger nav-badge">
                                    <i class="fas fa-times-circle"></i> Refusé
                                </span>
                            {% elseif app.user.artisan.approvalStatus == 'APPROVED' %}
                                <a href="{{ path('app_artisan_show', {'id': app.user.artisan.id}) }}" class="nav-link-special nav-link-boutique">
                                    <i class="fas fa-store"></i> Ma Boutique
                                </a>
                            {% endif %}
                        {% endif %}

                        {% if is_granted('ROLE_ADMIN') %}
                             <a href="{{ path('admin_requests') }}">
                                <i class="fas fa-tasks"></i> Demandes
                            </a>
                        {% endif %}

                        <div class="dropdown">
                            <button class="dropdown-btn nav-user-info">
                                <i class="fas fa-user-circle"></i>
                                <span>{{ (app.user.firstName ~ ' ' ~ app.user.lastName)|trim|title ?: app.user.email }}</span>
                                <i class="fas fa-chevron-down ml-1"></i>
                            </button>
                            <div class="dropdown-content">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('app_user') }}">
                                        <i class="fas fa-users-cog"></i> Gestion Utilisateurs
                                    </a>
                                    <a href="{{ path('app_cooperative_new') }}">
                                        <i class="fas fa-plus-circle"></i> Ajouter Coopérative
                                    </a>
                                    <div class="dropdown-divider"></div>
                                {% endif %}
                                {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') and not app.user.artisan %}
                                    <a href="{{ path('app_become_artisan') }}">
                                        <i class="fas fa-hammer artisan-icon"></i> Devenir Artisan
                                    </a>
                                {% endif %}
                                <a href="{{ path('app_user_show', {'id': app.user.id}) }}">
                                    <i class="fas fa-id-badge"></i> Mon Profil
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="{{ path('app_logout') }}" class="text-danger">
                                    <i class="fas fa-sign-out-alt"></i> Déconnexion
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <a href="{{ path('app_login') }}" data-turbo="false"><i class="fas fa-sign-in-alt"></i> Connexion</a>
                        <a href="{{ path('app_register') }}" data-turbo="false"><i class="fas fa-user-plus"></i> Devenir client</a>
                    {% endif %}
                </nav>
            </div>
        </nav>


        {% block body %}{% endblock %}

        <footer>
            <p>&copy; {{ "now"|date("Y") }} Artisana.ma - Plateforme d'Artisanat Marocain</p>
            <p class="footer-sub"> Maroc</p>
        </footer>

        {% set flashMessages = [] %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {% set flashMessages = flashMessages|merge([{'type': label, 'message': message}]) %}
            {% endfor %}
        {% endfor %}
        <div id="flash-messages-data" data-messages="{{ flashMessages|json_encode|e('html_attr') }}" style="display: none;"></div>
    </body>
</html>
