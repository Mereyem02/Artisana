{% extends 'base.html.twig' %}

{% block title %}Médias produits - Artisana.ma{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/product_media.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h1>Médias des Produits</h1>
    </div>
    <div class="grid">
        {% for m in media %}
            <div class="card media-card">
                <img src="{{ m.url }}" alt="Product Media">
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
