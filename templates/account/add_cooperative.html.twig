{%extends 'base.html.twig'%}
{%block title}Ajoutez votre coopérative au site{% endblock %}

{%block stylesheets%}
<link rel="" href="{{asset('css/cooperative_form.css)}}">
{%endblock %}

{%block body%}
<div class="container mt-8 mb-8">
    <div class="card form-container-card">
      <div class="page-header">
        <h1 class="form-title"><i class="fas fa-handshake"></i> Ajoutez votre coopérative au site</h1>
         <p>Ouvrer votre boutique et commencez à vendre vos créations dès aujourd'hui</p>
      </div>

      {{form_start(form, {'attr': {'class': 'js-confirm-submit', 'novalidate': 'novalidate'}})}}
       
      <div class="form-group">
          {{form_label(form.logo, null, {'label_attr': {'class': 'form-label'}})}}
          {{form_widget(form.logo,'attr': {'class': 'form-control'} )}}
      <div class="error-message">{{form_errors(form.logo)}}</div>
      </div>

        <div class="form-group">
          {{form_label(form.nom, null, {'label_attr': {'class': 'form-label'}})}}
          {{form_widget(form.nom)}}
          <div class="error-message">{{form_errors(form.nom)}}</div>
        </div> 

        <div class="form-group">
           {{form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}})}}
           {{form_widget(form.adresse)}}
           <div class="error-message">{{form_errors(form.adresse)}}</div>
        </div>

        <div class="form-group">
              {{form_label(form.description,null,{'label_attr':{'class':'form-label'}})}}
              {{form_widget(form.description)}}
              <div class="error-message">{{form_errors(form.description)}}</div>
        </div>

        <div class="form-group">
              {{form_label(form.contact,null,{'label_attr':{'class':'form-label'}})}}
              {{form_widget(form.contact)}}
              <div class="error-message">{{form_errors(form.contact)}}</div>
        
        <div class="form-group">
        {{form_label(form.email,null,{'label_attr':{'class':'form-label'}})}}
        {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
        <div class="error-message">{{form_errors(form.email)}}</div>
        </div>

        {{form_end(form)}}
    </div>
</div>

{%endblock%}